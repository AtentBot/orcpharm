@{
    ViewData["Title"] = "Validar Código";
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OrcPharm</title>
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">
    
    <style>
        :root {
            --primary-color: #2563eb;
            --primary-dark: #1d4ed8;
        }

        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
        }

        .validate-container {
            max-width: 450px;
            width: 100%;
            padding: 0 1rem;
        }

        .validate-card {
            background: white;
            border-radius: 1rem;
            box-shadow: 0 20px 60px rgba(0,0,0,0.3);
            overflow: hidden;
        }

        .validate-header {
            background: linear-gradient(135deg, #10b981 0%, #059669 100%);
            color: white;
            padding: 2rem;
            text-align: center;
        }

        .validate-header i {
            font-size: 3rem;
            margin-bottom: 1rem;
        }

        .validate-header h1 {
            font-size: 1.5rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
        }

        .validate-body {
            padding: 2rem;
        }

        .code-inputs {
            display: flex;
            gap: 0.5rem;
            justify-content: center;
            margin: 2rem 0;
        }

        .code-input {
            width: 3rem;
            height: 3.5rem;
            text-align: center;
            font-size: 1.5rem;
            font-weight: 700;
            border: 2px solid #e2e8f0;
            border-radius: 0.5rem;
            transition: all 0.2s;
        }

        .code-input:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1);
            outline: none;
        }

        .btn-primary {
            background: var(--primary-color);
            border: none;
            padding: 0.875rem;
            font-weight: 600;
            border-radius: 0.5rem;
            transition: all 0.2s;
        }

        .btn-primary:hover {
            background: var(--primary-dark);
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(37, 99, 235, 0.4);
        }

        .link-primary {
            color: var(--primary-color);
            text-decoration: none;
            font-weight: 500;
        }

        .link-primary:hover {
            text-decoration: underline;
        }

        .info-box {
            background: #f0fdf4;
            border: 1px solid #86efac;
            border-radius: 0.5rem;
            padding: 1rem;
            margin-bottom: 1.5rem;
        }

        .info-box i {
            color: #10b981;
        }

        .timer {
            text-align: center;
            margin: 1rem 0;
            font-weight: 600;
            color: #64748b;
        }
    </style>
</head>
<body>
    <div class="validate-container">
        <div class="validate-card">
            <div class="validate-header">
                <i class="bi bi-shield-check"></i>
                <h1>Validação de Segurança</h1>
                <p>Digite o código enviado por WhatsApp</p>
            </div>

            <div class="validate-body">
                <div class="info-box">
                    <i class="bi bi-info-circle me-2"></i>
                    Enviamos um código de 6 dígitos para o seu WhatsApp.
                </div>

                <div id="alertContainer"></div>

                <form id="validateForm">
                    <div class="code-inputs">
                        <input type="text" class="code-input" id="digit1" maxlength="1" pattern="\d" required>
                        <input type="text" class="code-input" id="digit2" maxlength="1" pattern="\d" required>
                        <input type="text" class="code-input" id="digit3" maxlength="1" pattern="\d" required>
                        <input type="text" class="code-input" id="digit4" maxlength="1" pattern="\d" required>
                        <input type="text" class="code-input" id="digit5" maxlength="1" pattern="\d" required>
                        <input type="text" class="code-input" id="digit6" maxlength="1" pattern="\d" required>
                    </div>

                    <div class="timer">
                        Código expira em: <span id="countdown">05:00</span>
                    </div>

                    <button type="submit" class="btn btn-primary w-100 mb-3" id="btnValidate">
                        <span id="btnText">Validar Código</span>
                        <span id="btnLoader" class="d-none">
                            <span class="spinner-border spinner-border-sm me-2"></span>
                            Validando...
                        </span>
                    </button>

                    <div class="text-center">
                        <button type="button" class="btn btn-link link-primary" id="btnResend">
                            Não recebeu? Reenviar código
                        </button>
                    </div>
                </form>

                <div class="text-center mt-3">
                    <a href="/Account/Login" class="link-primary">
                        <i class="bi bi-arrow-left me-1"></i>
                        Voltar para login
                    </a>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>
        // Auto-focus e navegação entre inputs
        const inputs = document.querySelectorAll('.code-input');
        
        inputs.forEach((input, index) => {
            input.addEventListener('input', function(e) {
                const value = e.target.value;
                
                // Permitir apenas números
                if (!/^\d$/.test(value)) {
                    e.target.value = '';
                    return;
                }
                
                // Mover para próximo input
                if (value && index < inputs.length - 1) {
                    inputs[index + 1].focus();
                }
            });
            
            input.addEventListener('keydown', function(e) {
                // Voltar para input anterior com backspace
                if (e.key === 'Backspace' && !e.target.value && index > 0) {
                    inputs[index - 1].focus();
                }
            });
            
            input.addEventListener('paste', function(e) {
                e.preventDefault();
                const pastedData = e.clipboardData.getData('text');
                const digits = pastedData.replace(/\D/g, '').split('');
                
                digits.forEach((digit, i) => {
                    if (index + i < inputs.length) {
                        inputs[index + i].value = digit;
                    }
                });
                
                // Focar no último input preenchido ou no próximo vazio
                const lastFilledIndex = Math.min(index + digits.length - 1, inputs.length - 1);
                inputs[lastFilledIndex].focus();
            });
        });
        
        // Focar no primeiro input ao carregar
        inputs[0].focus();
        
        // Countdown timer
        let timeLeft = 300; // 5 minutos
        const countdownElement = document.getElementById('countdown');
        
        const timer = setInterval(() => {
            const minutes = Math.floor(timeLeft / 60);
            const seconds = timeLeft % 60;
            countdownElement.textContent = `${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
            
            if (timeLeft <= 0) {
                clearInterval(timer);
                showAlert('O código expirou. Solicite um novo código.', 'warning');
            }
            
            timeLeft--;
        }, 1000);
        
        // Submit do formulário
        document.getElementById('validateForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const btnValidate = document.getElementById('btnValidate');
            const btnText = document.getElementById('btnText');
            const btnLoader = document.getElementById('btnLoader');
            const alertContainer = document.getElementById('alertContainer');
            
            // Limpar alertas anteriores
            alertContainer.innerHTML = '';
            
            // Obter código completo
            const code = Array.from(inputs).map(input => input.value).join('');
            
            if (code.length !== 6) {
                showAlert('Digite o código completo', 'warning');
                return;
            }
            
            // Mostrar loading
            btnValidate.disabled = true;
            btnText.classList.add('d-none');
            btnLoader.classList.remove('d-none');
            
            try {
                const response = await fetch('/api/Auth/verify-2fa', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ 
                        employeeId: sessionStorage.getItem('pendingEmployeeId'),
                        code: code 
                    })
                });
                
                const data = await response.json();
                
                if (response.ok) {
                    showAlert('Código validado! Redirecionando...', 'success');
                    sessionStorage.removeItem('pendingEmployeeId');
                    clearInterval(timer);
                    
                    setTimeout(() => {
                        window.location.href = '/Dashboard';
                    }, 1500);
                } else {
                    showAlert(data.message || 'Código inválido', 'danger');
                    // Limpar inputs
                    inputs.forEach(input => input.value = '');
                    inputs[0].focus();
                }
            } catch (error) {
                showAlert('Erro de conexão. Tente novamente.', 'danger');
            } finally {
                btnValidate.disabled = false;
                btnText.classList.remove('d-none');
                btnLoader.classList.add('d-none');
            }
        });
        
        // Reenviar código
        document.getElementById('btnResend').addEventListener('click', async function() {
            const employeeId = sessionStorage.getItem('pendingEmployeeId');
            
            if (!employeeId) {
                window.location.href = '/Account/Login';
                return;
            }
            
            try {
                const response = await fetch('/api/Auth/resend-2fa', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ employeeId })
                });
                
                if (response.ok) {
                    showAlert('Novo código enviado!', 'success');
                    // Resetar timer
                    timeLeft = 300;
                } else {
                    showAlert('Erro ao reenviar código', 'danger');
                }
            } catch (error) {
                showAlert('Erro de conexão', 'danger');
            }
        });
        
        function showAlert(message, type) {
            const alertContainer = document.getElementById('alertContainer');
            const alert = document.createElement('div');
            alert.className = `alert alert-${type} alert-dismissible fade show`;
            alert.innerHTML = `
                ${message}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            `;
            alertContainer.appendChild(alert);
        }
    </script>
</body>
</html>
